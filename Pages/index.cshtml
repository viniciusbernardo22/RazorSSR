@page
@model Razor.Pages.Index
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
    <head>
        <body>
        <partial name="Shared/NavMenuPartial" />
            <h1>Categories</h1>

                <div>
                    
                     <table>
                         <thead>
                             <tr>
                                 <td>
                                     ID
                                 </td>
                                 <td>
                                     title
                                 </td>
                                <td>
                                    Price
                                </td>
                             </tr>

                         </thead>
                         <tbody>
                             @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Price.ToString("C")
                            </td>
                        </tr>
                        
                    }
                </tbody>
                     </table>
                </div>
        </body>
    </head>
</html>